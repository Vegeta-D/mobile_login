<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_mobile" model="ir.ui.view">
        <field name="name">res.users.form.mobile</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='login']" position="after">
                <label for="mobile_login" string="Mobile"/>
                <h2><field name="mobile_login" placeholder="Please enter your mobile phone number." help="After setting it up, you can log in to the system using your mobile phone number."/></h2>
            </xpath>
        </field>
    </record>
</odoo>